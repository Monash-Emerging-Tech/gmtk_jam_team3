resource_name = "chest"
script/source = "extends AnimatedSprite2D

const APPLE = preload(\"res://prefabs/apple.tscn\")

var entered = false
var opened = false
var spawn_force = 100

func _physics_process(delta):
	if opened:
		return
	
	if Input.is_action_just_pressed(\"interact\") and entered:
		#opened = true
		self.modulate = Color(\"red\")
		var new_apple = APPLE.instantiate()
		var random_direction = Vector2.from_angle(randf()* 2 * PI)
		new_apple.position = position + random_direction * 10
		new_apple.apply_central_impulse(random_direction * spawn_force)
		get_tree().root.add_child(new_apple)

func _on_detection_body_shape_entered(body_rid: RID, body: Node2D, body_shape_index: int, local_shape_index: int) -> void:
	if opened:
		return
	entered = true
	self.modulate = Color(\"green\")

func _on_detection_body_shape_exited(body_rid: RID, body: Node2D, body_shape_index: int, local_shape_index: int) -> void:
	if opened:
		return
	entered = false
	self.modulate = Color(\"white\")
"

